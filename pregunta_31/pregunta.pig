TblPregunta = LOAD 'data.csv' USING PigStorage(',') 
    AS ( 
            Indice: int,
            Nombre:chararray,
            Apellido:chararray,
            Fecha:chararray,
            Color:chararray,
            Valor:chararray 
    );
 
Columnas = GROUP TblPregunta BY GetYear(Fecha) AS ano;
ContarAno = FOREACH Columnas GENERATE group, COUNT(ano); 
STORE ContarAno INTO 'output' USING PigStorage(',');
